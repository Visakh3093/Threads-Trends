<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header d-flex">
        <h5 class="modal-title d-flex" id="exampleModalLabel">Threads & Trends</h5>
        <button type="button" class="close col-md-2" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      <h1>Hai <%= user.name %> </h1> Here you want to edit your profile !
      </div>
      <div class="modal-footer col-md-12">
        <a href="/editAdressProfile"><button type="button" class="btn btn-secondary">Edit Address</button></a>
        <a href="/editProfile"><button type="button" class="btn btn-primary">Edit Profile</button></a>
      </div>
    </div>
  </div>
