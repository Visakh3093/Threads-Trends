  <!-- validation  -->

  <script type="text/javascript">

    function validation() {
      var user = document.getElementById('name').value;
      var email = document.getElementById('email').value;
      var mno = document.getElementById('mno').value;
      var password = document.getElementById('password').value;
      var password2 = document.getElementById('password2').value;




      if (user == "") {
        document.getElementById('name1').innerHTML =
          "Please fill the username field";
         
        return false;
      }
     else if ((user.length <= 2) || (user.length > 20)) {
        document.getElementById('name1').innerHTML =
          "User length must be between 3 and 20";
         
        return false;
      }
      if(!user.match(/^[A-Za-z]+$/)){
        document.getElementById('name1').innerHTML = "Only characters are allowed"
        return false
      }
     else if (!isNaN(user)) {
        document.getElementById('name1').innerHTML =
          "Only characters are allowed";
         
        return false;
      }
      else{
        document.getElementById('name1').innerHTML =
          "";
          
      }


      if (email == "") {
        document.getElementById('email1').innerHTML =
          "please fill the email field";
         
        return false;
      }
     else if (email.indexOf('@') <= 0) {
        document.getElementById('email1').innerHTML =
          "Invalid '@' position ";    
                    
        return false;
      }
     else if ((email.charAt(email.length - 4) != '.') &&
        (email.charAt(email.length - 3) != '.')) {
        document.getElementById('email1').innerHTML =
          "Invalid '.' position ";
         
        return false;
      }
      else{
        document.getElementById('email1').innerHTML =
          "";
          
      }

      if (mno == "") {
        document.getElementById('mobile1').innerHTML =
          "please fill the mobile number field";
          
        return false;
      }
     else if (isNaN(mno)) {
        document.getElementById('mobile1').innerHTML =
          "Must write digits only not characters";
          
        return false;
      }
     else if (mno.length != 10) {
        document.getElementById('mobile1').innerHTML =
          "Must be 10 digits ";
         
        return false;
      }
      else{
        document.getElementById('mobile1').innerHTML =
          "";
          
      }


      if (password == "") {
        document.getElementById('passwords').innerHTML =
          "please fill the password field";
         
        return false;
      }
     else if ((password.length < 5) || (password.length > 10)) {
        document.getElementById('passwords').innerHTML =
          "Password length must be between 5 and 10";
          
        return false;
      }
      else{
        document.getElementById('passwords').innerHTML =
          "";
          
      } 


     if (password2 == "") {
        document.getElementById('conpasswords').innerHTML =
          "please fill the confirm password field";
          
        return false;
      }
     else if (password2 != password) {
        document.getElementById('conpasswords').innerHTML =
          "Password are not matching";
         
        return false;
      }
      else{
        document.getElementById('conpasswords').innerHTML =
          "";
          
      }
    }
  </script>
