    <section>
<div class="dashboard">
    <div class="container">
        <div class="row">
          <div class="col-12 col-lg-12 col col-md-8 col-sm-6 col-xs-2">
        
        <h3 class="h3order"></h3>
        <br>
          <table id="myTable" class="table	">
              <thead>
                <tr>
                  <th >OrderId</th>
                 <th> </th>
                  <th >Time</th>
                  <th >Payment</th>
                  <th >Status</th>
                  <th >Actions</th>  
                  <th>View Order</th>
                </tr>
              </thead>
              <% if(id){ %> 
              <% for(let key of Order){ %>
                <% if(Order){ %> 
                
              <tbody>  
                <tr>
                    <td><%= key._id %></td>
                    <td><%= key.name %></td>
                    <td><%= key.createdAt.toDateString() %></td>
                    <td><%= key.payment %></td>
                    <td><% if(key.status == true) {%><i class="m-r-10 mdi mdi-account-off text-success" style="width: 100px;">Ordered</i><%} else{%>  <i class="m-r-10 mdi mdi-account-off text-danger" style="width: 100px;">Order Cancel</i><% } %> </td>
                  <td><% if(key.status == true) {%> <a href="/calcelOrder?id=<%= key._id %>" class="btn btn-danger ">Cancel Order</a><% }else{}%></td>
                  <td><% if(key.status == true) {%><a href="/orderDetails?id=<%= key._id %>" class="btn btn-info">View Details</a><% }else{}%></td>
                </tr>
              </tbody>
              <% }else{ %> 
                <p>No order has been made yet.</p>
                <% } %> 
              <% } %>
            </table>
      

    

        <% }else{ %> 
            <h4>please login....</h4>
        <% } %> 
